<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#ffffff"
    tools:context="com.popo.as.appbook.ContactUs"
    >
    <ImageView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/contactus"
        />



    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_below="@id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#ffffff"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:background="#e0e0e0">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:layout_gravity="center_horizontal"
                android:textSize="35sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanks for using our App. Fell free to contact us."
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Just hit the text, it will open automatically"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="18sp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textColor="#f44336"

                />



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#ffffff"
            >
        </View>
        <LinearLayout
           android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#e0e0e0"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/whaysapp"/>


    <TextView
        android:layout_marginLeft="5dp"
        android:onClick="whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Whatsapp"
        style="@style/headingContact"
        />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#ffffff"
            >
        </View>
        <LinearLayout
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="#e0e0e0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/mail"/>
    <TextView
        android:layout_marginLeft="5dp"
        android:onClick="contmail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Email"
        style="@style/headingContact" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#ffffff"
            >
        </View>
        <LinearLayout
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e0e0e0"
            android:paddingBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#f44336"
            android:textStyle="bold"
            android:text="NOTE:-"
            style="@style/teztContact" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="-You can contact any one of those lines. "
            style="@style/teztContact" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="-We will try to reply within 24HRS. "
            style="@style/teztContact" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="-Please do not call at that no,they are only meant for meassage. "
            style="@style/teztContact" />
        </LinearLayout>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="copyright popo 2017"/>

    </LinearLayout>


</RelativeLayout>
</ScrollView>
    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adViewcontact"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize = "BANNER"
        ads:adUnitId = "@string/banner_ad_id">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
